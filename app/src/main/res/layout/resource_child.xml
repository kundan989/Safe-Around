<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resource_child_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DCDCDC"
    android:paddingLeft="7dp"
    android:orientation="horizontal"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/state_child"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:textSize="13dp"
        android:text="aaaaaaaaaaaaa"
        android:textColor="#546E7A"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/city_child"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:text="aaaaaaaaaaaaa"
        android:textColor="#FF1744"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/name_child"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:textSize="13dp"
        android:layout_gravity="center"
        android:text="abcdinstituteodmediclicmr"
        android:textColor="#388E3C"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/phone_child"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="1234567890"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#546E7A"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/contact_child"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Contact"
        android:background="#FF0000"
        android:textSize="12dp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"></TextView>
</LinearLayout>